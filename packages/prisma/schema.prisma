// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator zod {
  provider = "zod-prisma"
  output   = "./zod"
}

enum Locale {
  en
  jp
}

model Product {
  id            Int    @id @default(autoincrement())
  title         String
  price         String
  stripePriceId String
  locale        Locale
  imageUrl      String
}
