{
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**"]
    },
    "@sat0shi-store/storefront#build": {
      "dependsOn": [
        "^build",
        "$NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY",
        "$NEXT_PUBLIC_API_HOST",
        "$NEXT_PUBLIC_API_PORT",
        "$NEXT_PUBLIC_API_PROTOCOL"
      ]
    },
    "lint": {
      "outputs": []
    },
    "dev": {
      "cache": false
    },
    "@sat0shi-store/prisma#build": {
      "dependsOn": ["$DATABASE_URL"],
      "outputs": ["zod/**"]
    },
    "@sat0shi-store/prisma#deploy": {
      "dependsOn": ["$DATABASE_URL"]
    },
    "@sat0shi-store/api#build": {
      "dependsOn": ["@sat0shi-store/prisma#deploy", "$STRIPE_SECRET_KEY"]
    },
    "@sat0shi-store/api#dx": {
      "dependsOn": ["@sat0shi-store/prisma#dx"]
    },
    "@sat0shi-store/storefront#dx": {
      "dependsOn": ["@sat0shi-store/prisma#dx"]
    },
    "dx": {
      "cache": false
    },
    "clean": {
      "cache": false
    }
  },
  "globalDependencies": [
    "apps/storefront/.env",
    "apps/api/.env",
    "packages/prisma/.env"
  ]
}
